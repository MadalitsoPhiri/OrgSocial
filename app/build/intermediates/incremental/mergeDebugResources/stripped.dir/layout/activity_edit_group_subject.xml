<?xml version="1.0" encoding="utf-8"?>
        
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".GroupDescription" android:tag="layout/activity_edit_group_subject_0">
        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/groupSubjectInput"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:hint="Add group Subject"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/emojiIcon"
                android:padding="10dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_below="@id/inputLayout"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="The group subject is equivalent to the groups name."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/cancel"
                android:text="Cancel"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/ok"
                android:text="OK"
                android:background="@android:color/transparent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"/>
        </LinearLayout>
    </RelativeLayout>
         