<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listItemSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
   >

    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="45dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileImage"
            app:civ_border="false"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ProgressBar
            android:id="@+id/profileImgProgress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"
            android:layout_centerInParent="true" />
        <ImageButton
            android:id="@+id/checked"
            android:clickable="false"
            android:background="@drawable/ic_group_3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

         <RelativeLayout
             android:id="@+id/userInfoTop"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/username"
                 android:layout_width="wrap_content"
                 android:paddingLeft="15dp"
                 android:layout_height="wrap_content"
                 android:text="username"
                 android:layout_alignParentLeft="true"
                 android:lines="1"
                 android:textColor="@android:color/black"
                 android:textSize="15sp"
                 android:textStyle="normal" />
             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_marginTop="3dp"
                 android:layout_marginRight="10dp"
                 android:layout_alignParentRight="true"
                 android:layout_weight="1"
                 android:layout_height="wrap_content">

                 <ImageButton
                     android:id="@+id/creatorBadge"
                     android:background="@drawable/ic_group_19"
                     android:visibility="invisible"
                     android:clickable="false"
                     android:layout_width="45dp"
                     android:layout_height="15dp"/>
                 <ImageButton
                     android:id="@+id/adminBadge"
                     android:background="@drawable/ic_group_20"
                     android:layout_marginLeft="5dp"
                     android:visibility="invisible"
                     android:clickable="false"
                     android:layout_width="45dp"
                     android:layout_height="15dp"/>
             </LinearLayout>

         </RelativeLayout>


     <TextView
         android:id="@+id/description"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="2dp"
         android:layout_below="@id/userInfoTop"
         android:text="description"
         android:paddingLeft="15dp"
         android:lines="1"
         android:textSize="13sp" />

 </RelativeLayout>


</LinearLayout>